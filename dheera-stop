#!/bin/bash
# DheeraLLM v0.3.0 - Stop Server Script

# Colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

PORT=4000

echo -e "${YELLOW}Stopping DheeraLLM server on port $PORT...${NC}"

# Check if server is running
if lsof -ti :$PORT > /dev/null 2>&1; then
    lsof -ti :$PORT | xargs kill -9
    echo -e "${GREEN}âœ“ Server stopped successfully${NC}"
else
    echo -e "${YELLOW}No server running on port $PORT${NC}"
fi
